<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PreduzecaPage">
    <children>
        <Button fx:id="addPreduzeceBtn" layoutX="50.0" layoutY="32.0" mnemonicParsing="false" onAction="#addNew" prefHeight="52.0" prefWidth="110.0" text="Novo preduzeće" textAlignment="CENTER" wrapText="true" />
        <TableView fx:id="table" layoutX="20.0" layoutY="140.0" prefHeight="437.0" prefWidth="652.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="39.0" text="ID" />
                <TableColumn fx:id="nazivCol" prefWidth="194.0" text="Naziv" />
                <TableColumn fx:id="adressCol" prefWidth="237.0" text="Adresa" />
                <TableColumn fx:id="phoneCol" minWidth="1.0" prefWidth="181.0" text="Broj telefona" />
            </columns>
        </TableView>
        <Button fx:id="updateBtn" layoutX="204.0" layoutY="32.0" mnemonicParsing="false" onAction="#update" prefHeight="52.0" prefWidth="110.0" text="Ažuriraj" />
        <Button fx:id="deleteBtn" layoutX="367.0" layoutY="32.0" mnemonicParsing="false" onAction="#delete" prefHeight="52.0" prefWidth="110.0" text="Obriši" />
        <TextField fx:id="pattern" layoutX="30.0" layoutY="107.0" prefHeight="25.0" prefWidth="179.0" />
        <Button fx:id="showAllBtn" layoutX="379.0" layoutY="107.0" mnemonicParsing="false" onAction="#showAll" prefHeight="25.0" prefWidth="72.0" text="Prikaži sve" />
        <Button fx:id="searchBtn" layoutX="225.0" layoutY="107.0" mnemonicParsing="false" onAction="#nazivSearch" prefHeight="25.0" prefWidth="142.0" text="Pretraga po nazivu" />
        <Button fx:id="addPrijavaBtn" layoutX="529.0" layoutY="35.0" mnemonicParsing="false" onAction="#addPrijavaKvara" prefHeight="52.0" prefWidth="110.0" text="Nova prijava kvara" textAlignment="CENTER" wrapText="true" />
    </children>
</AnchorPane>
